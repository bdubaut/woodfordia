<h2><%= @adventure.name %> </h2><small> <%= @adventure.tagline %> </small>
<p>
  <%= @adventure.synopsis %>
</p>

<table class='table table-hover'>
  <% @scenes.each do |s| %>
    <tr>
      <td>
        <%= link_to s.title, adventure_scene_path(adventure_id: @adventure.id, id: s.id) %>
      </td>
      <td>
        <%= link_to "Edit", edit_adventure_scene_path(adventure_id: @adventure.id, id: s.id), class: 'btn btn-xs btn-info ' %>
      </td>
      <td>
        <%= link_to "Delete", adventure_scene_path(adventure_id: @adventure.id, id: s.id), method: :delete, class: 'btn btn-xs btn-danger ' %>
      </td>

    </tr>
  <% end %>
</table>

<%= link_to '+ Add Scene', new_adventure_scene_path(@adventure.id), class: "btn btn-success" %>
