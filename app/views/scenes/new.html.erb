<%= form_for :scene, url: {action: "create"} do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
    <br>
    <%= f.label :question_1 %>
    <%= f.text_field :question_1, class: "form-control" %>
    <br>
    <%= f.label :question_2 %>
    <%= f.text_field :question_2, class: "form-control" %>
    <br>
    <%= f.label :question_3 %>
    <%= f.text_field :question_3, class: "form-control" %>
    <br>
  </div>
  <div class="form-group">
    <%= f.label :previous_scenes %>
    <%= f.select('previous_scenes', options_for_select(@list),{}, { multiple: true, class: "form-control"}) %>

  </div>
  <div class="form-group">
    <%= f.label :next_scenes %>
    <%= f.select('next_scenes', options_for_select(@list), {}, { multiple: true, class: 'form-control' }) %>
  </div>
  <%= f.submit 'Create', class: "btn btn-success" %>
<% end %>
