<h3>Scene: <%= @scene.title %> </h3>
<p>
  <%= @scene.description %>
</p>
<span><%= @scene.question_1 %> </span><br>
<span><%= @scene.question_2 %> </span><br>
<span><%= @scene.question_3 %> </span><br>
<h4>Outcomes:</h4>
<ul>
  <% @scene.next_scenes.each do |s| %>
    <%= link_to "#{s.title}", adventure_scene_path(adventure_id: @scene.adventure.id, id: s.id) %>
  <% end %>
</ul>
